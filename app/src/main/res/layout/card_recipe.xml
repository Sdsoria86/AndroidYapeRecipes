<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginVertical="@dimen/d_5"
    android:layout_marginHorizontal="@dimen/d_5">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearItemRecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@drawable/bg_item">
        <ImageView
            android:id="@+id/ivImageRecipe"
            android:layout_width="@dimen/d_100"
            android:layout_height="@dimen/d_100"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginVertical="@dimen/d_10"
            android:layout_gravity="center"
            android:contentDescription="@string/imgDescriptionRecipe" />

        <TextView
            android:id="@+id/txtNameRecipe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tool:text="Title"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginVertical="3dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>